pipeline {
  agent none
  
  stages {
    
    stage('Build') {
      agent  {
        kubernetes {
         yamlFile('manifests/maven.yaml')
        }
      }
      steps {
        container('maven') {
          sh 'mvn package --file DSpace-dspace-8.1/dspace/pom.xml'
  
        }
       
      }
    }
    stage('Archive Installer') {
            steps {
                stash includes: 'dspace-api/DSpace-dspace-8.1/dspace/target/dspace-installer/**' // Stash the installer directory
                archiveArtifacts 'dspace-api/DSpace-dspace-8.1/dspace/target/dspace-installer/**' // Archive for download
            }
    }
    

  }
}